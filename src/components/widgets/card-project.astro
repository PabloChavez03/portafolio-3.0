---
interface Props {
  title: string;
  description: string;
  href?: string;
  repositoryUrl: string;
  techs: Array<string>;
}

import ArrowIcon from "../../assets/icons/arrow-link-icon.astro";
import GithubIcon from "../../assets/icons/github-icon.astro";
import BadgeTech from "../atoms/badge-tech.astro";

const { title, description, href, repositoryUrl, techs } = Astro.props;
---

<div class="flex flex-col rounded-md border border-neutral-800 p-4">
  <div class="mb-2 flex items-center justify-between">
    <a href={href} target="_blank" class="group text-xl font-medium"
      ><div class="flex items-center space-x-2 transition hover:text-gray-400">
        <h1>{title}</h1>
        {href && <ArrowIcon />}
      </div></a
    ><div class="flex items-center space-x-3">
      <a href={repositoryUrl} target="_blank" title="Repository">
        <GithubIcon />
      </a>
    </div>
  </div><p class="text-gray-400">
    {description}
  </p><div class="mt-3 flex items-center justify-between">
    <div class="grid grid-flow-col-dense space-x-2 lg:flex lg:items-center">
      {techs.map((tech) => <BadgeTech title={tech} />)}
    </div>
  </div>
</div>
